{
  "name": "todo-monorepo",
  "private": true,
  "engines": {
    "node": "^22.21.0",
    "pnpm": "^10.19.0"
  },
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "build": "pnpm -r build",
    "build:packages": "pnpm -F '!./apps/**' run build",
    "build:mobile": "pnpm -F !web run build",
    "build:web": "pnpm -F !mobile run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "pnpm -r clean",
    "auth:generate": "pnpm -F @todo/auth generate",
    "db:push": "pnpm -F @todo/db push",
    "db:studio": "pnpm -F @todo/db studio",
    "dev": "pnpm -r run dev",
    "dev:mobile": "pnpm -F mobile run dev",
    "dev:web": "pnpm -F web run dev",
    "format": "pnpm -r format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "pnpm -r format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "ios": "pnpm -F mobile run ios",
    "lint": "pnpm -r lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "pnpm -r lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "preinstall": "npx only-allow pnpm",
    "prod:db:push": "pnpm dotenv -e .env.prod -- drizzle-kit push",
    "prod:deploy": "pnpm dotenv -e .env.prod -- sst deploy --stage prod",
    "prod:nuke": "pnpm dotenv -e .env.prod -- sst remove --stage prod"
  },
  "devDependencies": {
    "@todo/prettier-config": "workspace:*",
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3"
  },
  "prettier": "@todo/prettier-config"
}
