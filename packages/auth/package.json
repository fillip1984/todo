{
  "name": "@todo/auth",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./middleware": "./src/middleware.ts",
    "./client": "./src/client.ts",
    "./env": "./env.ts"
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm lint && tsc",
    "clean": "git clean -xdf .cache  dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "generate": "dotenv -e ../../.env -- pnpx @better-auth/cli generate --config script/auth-cli.ts --output ../db/src/auth-schema.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@better-auth/expo": "1.4.13",
    "@t3-oss/env-core": "^0.13.10",
    "@todo/db": "workspace:*",
    "better-auth": "1.4.13",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@better-auth/cli": "1.4.13",
    "@todo/eslint-config": "workspace:*",
    "@todo/prettier-config": "workspace:*",
    "@todo/tsconfig": "workspace:*",
    "@types/node": "^25.0.9",
    "eslint": "^9.39.2",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3"
  },
  "prettier": "@todo/prettier-config"
}
